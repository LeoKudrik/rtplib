{pre_hooks, [{compile, "sed -e \"s,%VSN%,${VSN},g;s,%DATE%,${BUILD_DATE},g\" priv/erlang-rtplib.spec.in > priv/erlang-rtplib.spec"}]}.
{post_hooks, [{compile, "sed -i -e \"s,%VSN%,${VSN},g\" ebin/rtplib.app"}]}.
{cover_enabled, true}.
{erl_opts, [debug_info]}.
% FIXME not all drivers shouls be linked wth -lgsm -lspandsp
{port_envs, [{"LDFLAGS", "$LDFLAGS -lgsm -lspandsp -ltiff -lm"}]}.
{so_specs,
	[
		{"priv/g722_codec_drv.so", ["c_src/g722_codec.o"]},
		{"priv/gsm_codec_drv.so", ["c_src/gsm_codec.o"]},
		{"priv/pcmu_codec_drv.so", ["c_src/pcmu_codec.o"]},
		{"priv/pcma_codec_drv.so", ["c_src/pcma_codec.o"]}
	]
}.
